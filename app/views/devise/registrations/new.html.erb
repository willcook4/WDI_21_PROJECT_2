<div class="container">
<div class="subform">
  <h2 class="pageheading">Sign up</h2>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-group row">
        <div class="field">
          <%= f.label :username, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
           <%= f.text_field :username, :class => "form-control" %>
          </div>    
       </div>
      </div>

      <div class="form-group row">
        <div class="field">
          <%= f.label :first_name, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
            <%= f.text_field :first_name, :class => "form-control" %>
          </div>    
        </div>
      </div>

      <div class="form-group row">
        <div class="field">
          <%= f.label :last_name, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
            <%= f.text_field :last_name, :class => "form-control" %>    
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="field">
          <%= f.label :contact_number, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
            <%= f.text_field :contact_number, :class => "form-control" %>
          </div>    
        </div>
      </div>

      <div class="form-group row">
        <div class='field'>
          <%= f.label :profile_image, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
             <%= f.file_field :profile_image, :class => "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="field">
          <%= f.label :email, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
            <%= f.email_field :email, :class => "form-control" %>
         </div>
        </div>
      </div>

      <div class="form-group row">
          <div class="field">
            <%= f.label :password, :class => "col-sm-2 col-form-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          <div class="col-sm-5">
            <%= f.password_field :password, { autocomplete: "off", :class => "form-control" } %>
          </div>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="field">
          <%= f.label :password_confirmation, :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-5">
            <%= f.password_field :password_confirmation, { autocomplete: "off", :class => "form-control" } %>
          </div>
        </div>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", { :class => "btn btn-primary", :id => "loginbtn" } %>
      </div>
    <% end %>
  </div>  
  <%= render "devise/shared/links" %>
</div>
</div>

