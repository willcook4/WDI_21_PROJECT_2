<h1>Things</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Thing image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Owner</th>
      <th>Loanee</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td>id: <%= thing.id%></td>
        <td> <%=image_tag thing.thing_images.first %></td>
        <td>Title: <%= thing.title %></td>
        <td>Description: <%= thing.description %></td>
        <td>Owner id: <%= thing.owner_id %></td>
        <td> thing.loanee_id </td>
        <td>Category: <%= thing.category_id %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>
