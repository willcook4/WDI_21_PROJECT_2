<div class="container">
  <%= form_for(thing) do |f| %>
    <% if thing.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(thing.errors.count, "error") %> prohibited this thing from being saved:</h2>
        <ul>
        <% thing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <div class="field">
        <%= f.label :title, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="field">
        <%= f.label "Images, multiple allowed", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <% thing.thing_images.each.with_index do |image, index| %>
            <%= image_tag(image.sized) %>
            <%= check_box_tag 'images_to_delete[]', index %> Delete?
          <% end %>
          <%= f.file_field :thing_images, {:class => "form-control", :multiple =>true }%>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="field">
        <%= f.label :description, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, {:rows => "5", :id => "exampleInputFile", :class => "form-control"} %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="field">
        <%= f.label :tag_ids, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.collection_select(:tag_ids, @tags, :id, :name, {},{ :class => "form-control", multiple: true }) %>
        </div>
      </div>
    </div>

      <div class="actions">
        <%= f.submit 'Add Item', :class => "btn btn-primary" %>
      </div>
    <% end %>
</div>

