<h1><%= @tag.name %></h1>

<ul>
  <% @tag.things.each do |thing| %>
  <li>
    <%= link_to thing_path(thing.id) do %>
    <div>
      <% thing.thing_images.each do |image| %>
        <%= image_tag image.sized %>
      <% end %>
      <h5><%= thing.title %></h5>
      <h5><%= thing.description %></h5>
    </div>
    <% end %>
  </li>
  <% end %>
</ul>